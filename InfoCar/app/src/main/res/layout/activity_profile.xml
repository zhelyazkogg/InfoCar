<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBlue"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/brandCar"
            android:textSize="20sp"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/brandFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:text="@string/modelCar"
            android:textSize="20sp"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/modelFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="@string/vehicleType"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/vehicleTypeFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="@string/fuelType"
            android:textColor="@color/colorYellow"/>
        <EditText
            android:id="@+id/fuelFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="@string/engineRegister"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/engineFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="@string/yoursSince"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/yoursSinceFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="@string/kmVehicle"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/kmFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:text="@string/licensePlate"
            android:textColor="@color/colorYellow"/>

        <EditText
            android:id="@+id/licensePlateFirebase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
